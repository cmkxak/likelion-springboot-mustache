{{>layouts/header}}
<form action="/articles/posts" method="post">
    <div class="mt-3">
        <label for="exampleFormControlInput1" class="form-label">제목 입력</label>
        <input type="text" name = "title" class="form-control" id="exampleFormControlInput1" placeholder="제목을 입력하세요.">
    </div>

    <div class="mt-3">
        <label for="exampleFormControlTextarea1" class="form-label">내용 입력</label>
        <textarea class="form-control" name = "contents" id="exampleFormControlTextarea1" aria-placeholder="내용을 입력하세요"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>

    <a href="/articles" class="mt-3">back</a>
</form>
{{>layouts/footer}}
